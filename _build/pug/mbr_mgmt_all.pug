extends _layout.pug
block vars
	//- - var login = 1;
	- var page_class = "mbr_page mbr_mgmt mgmt_all";
	- var page_title = "档案管理 - 全部";
	- var mbr_header = 1;
	- var mbr_aside = 1;
	- var mbr_header_title = "档案管理";

block pluginStyle
	//- link(rel="stylesheet", href="dist/plugin/swiper/swiper.min.css")

block popup


block content
	.page_main(class=page_class)
		aside.mgmt_aside
			.mgmt_aside-top
				a.pgbtn.pgbtn-s1.add-pattern(href="")
					svg.svg_icon.icon-pencil.svg-pencil-dims
						use(xlink:href="#pencil")
					span.txt 新增设计
			.mgmt_aside-middle
				nav.mgmt_aside-nav
					ul.cf.lis-n
						li.mgmt_aside-nav-item.mgmt-recent
							a.inner(href="mbr_mgmt_home.html")
								.icon_block
									svg.svg_icon.icon-recent.svg-recent-dims
										use(xlink:href="#recent")
								span.txt 最近使用
						li.mgmt_aside-nav-item.mgmt-fav
							a.inner(href="mbr_mgmt_fav.html")
								.icon_block
									svg.svg_icon.icon-love.svg-love-dims
										use(xlink:href="#love")
								span.txt 喜爱
						li.mgmt_aside-nav-item.mgmt-all.active
							a.inner(href="mbr_mgmt_all.html")
								.icon_block
									svg.svg_icon.icon-file.svg-file-dims
										use(xlink:href="#file")
								span.txt 全部
						li.mgmt_aside-nav-item.mgmt-folder
							a.inner(href="mbr_mgmt_folder.html")
								.icon_block
									svg.svg_icon.icon-library.svg-library-dims
										use(xlink:href="#library")
								span.txt 资料夹
						li.mgmt_aside-nav-item.mgmt-archive
							a.inner(href="mbr_mgmt_archive.html")
								.icon_block
									svg.svg_icon.icon-bookmark.svg-bookmark-dims
										use(xlink:href="#bookmark")
								span.txt 封存
						li.mgmt_aside-nav-item.mgmt-trash
							a.inner(href="mbr_mgmt_trash.html")
								.icon_block
									svg.svg_icon.icon-cleaner.svg-cleaner-dims
										use(xlink:href="#cleaner")
								span.txt 垃圾桶
		main.main_content
			header.mgmt_topbar
				.inner
					.pgsort
						.txt 排序方式
						.pgsort-dropdown.pgdropdown.pgdropdown-s1
							.pgdropdown-ctrl.pgsort-ctrl
								.pg-selects-styled.ctrl-txt 选择排序方式
							.pgdropdown-menu.pgsort-menu.pg-selects-list
								ul.menu-list.lis-n.cf
									li.menu-item.pg-selects-item 按笔画排序 (中繁)
									li.menu-item.pg-selects-item 按字母排序 (中简 / 英文)
									li.menu-item.pg-selects-item 依照修改日期
									li.menu-item.pg-selects-item 依照生产季度
									li.menu-item.pg-selects-item 依照打版价格
									li.menu-item.pg-selects-item 依照布料特性
							//- .select_block.pgselect-s1
								select.select_sort#selectSort(name="")
									option(value="") 選擇排序方式
									option(value="sort1") 按筆畫排序 (中繁)
									option(value="sort2") 按字母排序 (中簡 / 英文)
									option(value="sort3") 依照修改日期
									option(value="sort4") 依照生產季度
									option(value="sort5") 依照打版價格
									option(value="sort6") 依照布料特性
					.pgfilter
						.txt 筛选条件
						.pgfilter-dropdown.pgdropdown.pgdropdown-s1
							.pgdropdown-ctrl.pgsort-ctrl
								.pg-selects-styled.ctrl-txt 选择过滤条件
							.pgdropdown-menu.pgsort-menu.pg-selects-list
								ul.menu-list.lis-n.cf
									li.menu-item.pg-selects-item 依款式类别 <span class="small">(上衣/裤子/裙子...)</span>
									li.menu-item.pg-selects-item 依标签类别 <span class="small">(喇叭裤 / 飞鼠裤 / 紧身裤...)</span>
									li.menu-item.pg-selects-item 依打版价格 <span class="small">(设定价格区间)</span>
									li.menu-item.pg-selects-item 依生产年度 <span class="small">(设定年分 or 季度...)</span>
									li.menu-item.pg-selects-item 依修改次数 <span class="small">(设定次数区间)</span>
									li.menu-item.pg-selects-item 是否媒合版师顾问
									li.menu-item.pg-selects-item 是否为真人打版
							//- select.select_filter#selectFilter(name="")
								option(value="") 選擇過濾條件
								option(value="") 依款式類別 <span class="small">(上衣/褲子/裙子...)</span>
								option(value="") 依標籤類別 <span class="small">(喇叭褲 / 飛鼠褲 / 緊身褲...)</span>
								option(value="") 依打版價格 <span class="small">(設定價格區間)</span>
								option(value="") 依生產年度 <span class="small">(設定年分 or 季度)</span>
								option(value="") 依修改次數 <span class="small">(設定次數區間)</span>
								option(value="") 是否媒合版師顧問
								option(value="") 是否為真人打版
					.pgsearch
						.search_block.pgsearch-s1.pginput-wrap
							input.pginput.input_search(type="text" placeholder="搜寻档案名称")
							button.btn_search(type="button")
								svg.svg_icon.icon-search.svg-search-dims
									use(xlink:href="#search")
				.layout-toggle-picker
					.btn_picker.layout-toggle-default
						svg.svg_icon.icon-layout_default.svg-layout_default-dims
							use(xlink:href="#layout_default")

					.btn_picker.layout-toggle-list
						svg.svg_icon.icon-layout_list.svg-layout_list-dims
							use(xlink:href="#layout_list")
			.content_wrap.mbr_mgmt_content
				.pattern_file-list
					.layout_list-title
						.title-block 档名
						.title-block 版型编号
						.title-block 修改次数
						.title-block 最后编辑
						.title-block 资料夹
						.title-block
					ul.cf.lis-n
						li.pattern_file-item
							.inner
								button.btn_more(type="button", onclick="pgUI.openItemMore(this);")
									svg.svg_icon.icon-btn_more.svg-btn_more-dims
										use(xlink:href="#btn_more")
								.pattern_file-item-more
									ul.cf.lis-n.inner
										li.more-item
											a(href="javascript:;") 开启档案
										li.more-item
											a(href="javascript:;") 移至资料夹...
											ul.cf.lis-n.more-sublist
												li.more-subitem
													a(href="javascript:;") 资料夹1
												li.more-subitem
													a(href="javascript:;") 资料夹2
												li.more-subitem
													a(href="javascript:;") 资料夹3
												li.more-subitem
													a(href="javascript:;") 资料夹4
												li.more-subitem
													a(href="javascript:;") 资料夹5
										.hr
										li.more-item
											a(href="javascript:;") 加入喜愛
										li.more-item
											a(href="javascript:;") 复制连结
										li.more-item
											a(href="javascript:;") 分享
										li.more-item
											a(href="javascript:;") 复制
										.hr
										li.more-item
											a(href="javascript:;") 重新命名
										li.more-item
											a(href="javascript:;") 封存
										li.more-item
											a(href="javascript:;") 删除
								.pattern_file-pic
									.pic
										img(src="public/images/sketch.png", alt="")
								.pattern_file-content
									.pattern_file-content-txt.pattern_file-name 这里是档案名称
									.pattern_file-content-txt.pattern_file-no.txt-gray1 <span class="title">版型编号：</span><span class="pattern_file-no-txt">m1234567</span>
									.pattern_file-content-txt.pattern_file-renum.txt-gray1 <span class="title">修改次数：</span><span class="pattern_file-renum-txt">2</span>
									.pattern_file-content-txt.pattern_file-last.txt-gray1 <span class="title">最后编辑：</span><span class="pattern_file-last-txt">3天前</span>
									.pattern_file-content-txt.pattern_file-folder.txt-gray1
										.txt.title 资料夹
										.folder-dropdown.pgdropdown.pgdropdown-s1
											.pgdropdown-ctrl.folder-ctrl
												.ctrl-txt 未指定
											.pgdropdown-menu.folder-menu.pg-selects-list
												ul.menu-list.lis-n.cf
													li.menu-item.pg-selects-item 资料夹1

	.mbr_page_footer
		p.copyright Copyright © 2020 Pattern Go All Rights Reserved | Designed by LOHAS IT
		.lang
			| 语言
			.pgselect-wrap.select_block
				select.pgselect.pgselect-s2
					option(value="0") 简体中文
					option(value="1") 繁體中文
					option(value="2") English

		// main.main_content  END  !!
